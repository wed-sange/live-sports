<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/blue_ed</item>
        <item name="colorPrimaryDark">@color/blue_ed</item>
        <item name="colorAccent">@color/mColorAccent</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>

    <!--Toolbar-->
    <style name="actionBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <!--启动页-->
    <style name="Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- <item name="android:colorBackground">#D4EBF2</item>-->
        <item name="android:windowBackground">@drawable/bg_about_us</item>
        <item name="android:windowAnimationStyle">@style/Animation_Splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>

    <!-- SplashActivity theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">#D4EBF2</item>
    </style>

    <style name="Animation_Splash" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_scale_in</item>
    </style>

    <style name="TextInputWhiteStyle" parent="AppTheme">
        <!--输入框提示字体色-->
        <item name="android:textColorHint">#ffffff</item>
        <!--输入框下划线默认颜色-->
        <!--        <item name="colorControlNormal">@color/white</item>-->
        <!--输入框下划线选中状态色-->
        <item name="colorControlActivated">#ffffff</item>
        <!--输入框光标颜色-->
        <item name="colorControlHighlight">#ffffff</item>
    </style>

    <style name="TextInputThemeStyle" parent="AppTheme">
        <!--输入框提示字体色-->
        <!--        <item name="android:textColorHint">@color/white</item>-->
        <!--输入框下划线默认颜色-->
        <item name="colorControlNormal">@color/md_theme_red</item>
        <!--输入框下划线选中状态色-->
        <item name="colorControlActivated">@color/md_theme_red</item>
        <!--输入框光标颜色-->
        <item name="colorControlHighlight">@color/md_theme_red</item>
    </style>

    <!-- 筛选选择框自定义主题 -->
    <style name="select_style">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@drawable/tag_tv_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/tag_text_color_selector</item>
    </style>


    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SwitchStyleClickable">
        <item name="colorControlActivated">@color/md_theme_red</item>
    </style>

    <style name="loadDialogStyle">
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="commonDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Transparent">
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:windowIsTranslucent">true</item>
<!--        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->
        <item name="android:windowIsFloating">true</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="activityAnim">
        <!--打开新活动时，这是在下一个活动（正在进入屏幕）上运行的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <!--打开新活动时，这是在上一个活动（正在退出屏幕）上运行的动画-->
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <!--关闭当前活动时，这是在下一个活动（正在进入屏幕）上运行的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <!--关闭当前活动时，这是在当前活动（退出屏幕）上运行的动画-->
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>
</resources>