<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/llEventsClick"
        android:background="@drawable/selector_txt_transparent_f6f7fa"
        android:orientation="horizontal">
        <com.xcjh.app.utils.nice.NiceImageView
            android:id="@+id/ivNewsIcon"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            app:corner_radius="@dimen/dp_4"
            app:srcCompat="@drawable/load_square" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="@dimen/dp_100"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEventsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="标题标题标题标题标题标题"
                android:textColor="@color/c_37373d"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEventsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/c_94999f"
                android:singleLine="true"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:text="2023-07-03 12:55发布"/>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/c_f2f3f7"/>

    </RelativeLayout>


</LinearLayout>