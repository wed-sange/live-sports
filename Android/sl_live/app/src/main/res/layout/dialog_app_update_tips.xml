<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="315dp"
        android:background="@drawable/shape_r8_14142a"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:padding="@dimen/dp_30"
        android:layout_height="437dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtUpdateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_f5f5f5"
            android:textSize="@dimen/sp_20"
            android:layout_centerHorizontal="true"
            android:text="@string/update_title"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llAppBottom"
            android:layout_below="@+id/txtUpdateTitle"
            android:layout_marginTop="@dimen/dp_15">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAppContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/c_f5f5f5"
                    android:textSize="@dimen/sp_16"
                    android:text="sadsadsdasdsad撒复方丹参发生访问分无法微服务我访问"/>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/llAppBottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:id="@+id/txtUpdateCancel"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_r6_332c5c"
            android:text="@string/update_not_updated"
            android:textColor="@color/c_60f5f5f5"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:id="@+id/txtUpdateCommit"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_r8_6d48fe"
            android:text="@string/update_update_now"
            android:textColor="@color/c_f5f5f5"/>
    </LinearLayout>

    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>