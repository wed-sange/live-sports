        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="@string/efq"
                android:textColor="@color/c_d7d7e7"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHit2Away"
                    style="@style/matchResultBoldNum"
                    android:layout_toStartOf="@id/pro_two_point" />

                <ProgressBar
                    android:id="@+id/pro_two_point"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="236dp"
                    android:layout_height="@dimen/dp_8"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="12.5dp"
                    android:layout_marginEnd="12.5dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/hori_progress_bg" />

                <TextView
                    android:id="@+id/tvHit2Home"
                    style="@style/matchResultBoldNum"
                    android:layout_toEndOf="@id/pro_two_point" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/sfq"
                android:textColor="@color/c_d7d7e7"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHit3Away"
                    style="@style/matchResultBoldNum"
                    android:layout_toStartOf="@id/pro_three_point" />

                <ProgressBar
                    android:id="@+id/pro_three_point"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="236dp"
                    android:layout_height="@dimen/dp_8"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12.5dp"
                    android:layout_marginEnd="12.5dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/hori_progress_bg" />

                <TextView
                    android:id="@+id/tvHit3Home"
                    style="@style/matchResultBoldNum"
                    android:layout_toEndOf="@id/pro_three_point" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/fq"
                android:textColor="@color/c_d7d7e7"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPenaltyAway"
                    style="@style/matchResultBoldNum"
                    android:layout_toStartOf="@id/pro_penalty" />

                <ProgressBar
                    android:id="@+id/pro_penalty"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="236dp"
                    android:layout_height="@dimen/dp_8"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12.5dp"
                    android:layout_marginEnd="12.5dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/hori_progress_bg" />

                <TextView
                    android:id="@+id/tvPenaltyHome"
                    style="@style/matchResultBoldNum"
                    android:layout_toEndOf="@id/pro_penalty" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/two_s_percent"
                    android:textColor="@color/c_d7d7e7"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.xcjh.app.view.ProgressBarView
                    android:id="@+id/pgTwoPercent"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv1"
                    app:max="100"
                    app:progressValue="50"
                    app:ringColor="@color/c_pb_bg"
                    app:ringProgressColor="@color/c_pb_bar"
                    app:ringWidth="9dp" />

                <TextView
                    android:id="@+id/tv2Away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:text="@string/_0"
                    android:textColor="@color/c_94999f"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/pgTwoPercent"
                    app:layout_constraintEnd_toStartOf="@id/pgTwoPercent"
                    app:layout_constraintTop_toTopOf="@id/pgTwoPercent" />

                <TextView
                    android:id="@+id/tv2Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:text="@string/_0"
                    android:textColor="@color/c_94999f"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/pgTwoPercent"
                    app:layout_constraintStart_toEndOf="@id/pgTwoPercent"
                    app:layout_constraintTop_toTopOf="@id/pgTwoPercent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/three_s_percent"
                    android:textColor="@color/c_d7d7e7"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.xcjh.app.view.ProgressBarView
                    android:id="@+id/pgThreePercent"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv2"
                    app:max="100"
                    app:progressValue="50"
                    app:ringColor="@color/c_pb_bg"
                    app:ringProgressColor="@color/c_pb_bar"
                    app:ringWidth="9dp" />

                <TextView
                    android:id="@+id/tv3Away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:text="@string/_0"
                    android:textColor="@color/c_94999f"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/pgThreePercent"
                    app:layout_constraintEnd_toStartOf="@id/pgThreePercent"
                    app:layout_constraintTop_toTopOf="@id/pgThreePercent" />

                <TextView
                    android:id="@+id/tv3Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:text="@string/_0"
                    android:textColor="@color/c_94999f"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/pgThreePercent"
                    app:layout_constraintStart_toEndOf="@id/pgThreePercent"
                    app:layout_constraintTop_toTopOf="@id/pgThreePercent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/fq_s_percent"
                    android:textColor="@color/c_d7d7e7"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.xcjh.app.view.ProgressBarView
                    android:id="@+id/pgFqPercent"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv3"
                    app:max="100"
                    app:progressValue="50"
                    app:ringColor="@color/c_pb_bg"
                    app:ringProgressColor="@color/c_pb_bar"
                    app:ringWidth="9dp" />

                <TextView
                    android:id="@+id/tvFqAway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:text="@string/_0"
                    android:textColor="@color/c_94999f"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/pgFqPercent"
                    app:layout_constraintEnd_toStartOf="@id/pgFqPercent"
                    app:layout_constraintTop_toTopOf="@id/pgFqPercent" />

                <TextView
                    android:id="@+id/tvFqHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:text="@string/_0"
                    android:textColor="@color/c_94999f"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/pgFqPercent"
                    app:layout_constraintStart_toEndOf="@id/pgFqPercent"
                    app:layout_constraintTop_toTopOf="@id/pgFqPercent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>