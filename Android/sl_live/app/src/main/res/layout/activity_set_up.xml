<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_f2f3f7" >

        <include
            android:id="@+id/titleTop"
            layout="@layout/com_title" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_below="@+id/titleTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_18">

            <RelativeLayout
                android:id="@+id/rlSetData"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shape_water_whith_8">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        app:srcCompat="@drawable/edit_icon_selector"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@drawable/txt_colour_black_selector"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/my_txt_edit_data"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="5dp"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/wd_gengduo_icon"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSetPush"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shape_water_whith_8"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        app:srcCompat="@drawable/push_icon_selector" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/set_txt_push"
                        android:textColor="@drawable/txt_colour_black_selector"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="5dp"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/wd_gengduo_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSetVibrate"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shape_water_whith_8">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        app:srcCompat="@drawable/vibrate_icon_selector"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@drawable/txt_colour_black_selector"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/set_txt_vibrate"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="5dp"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/wd_gengduo_icon"/>
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSetExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_d63823"
            android:textSize="15sp"
            android:text="@string/my_txt_out"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/selector_24_whith_f6f7fa"/>
    </RelativeLayout>
</layout>