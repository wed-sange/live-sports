<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="226dp"
    android:layout_height="127dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_12"
    android:layout_marginRight="12dp"
    android:id="@+id/llcClickRecommended"
    android:background="@drawable/selector_10_whith_f6f7fa"
   >
<!--selector_10_whith_f6f7fa-->
<!--    selctor_color_whith_f6f7fa-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:layout_gravity="center"
        android:paddingRight="@dimen/dp_12">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCompetition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="11sp"
                android:textColor="@color/c_37373d"
                android:text="中超"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMatchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第二节"
                    android:textSize="11sp"
                    android:textColor="@color/c_f69521"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMatchAnimation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'"
                    android:visibility="gone"
                    android:textSize="11sp"
                    android:textColor="@color/c_f69521"/>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtMatchTime"
                android:text="12/10/17:20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/c_94999f"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/txtMatchIsStart"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="@dimen/dp_5"
                    android:gravity="center"
                    android:background="@drawable/shape_24_ff6f7fa">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        app:srcCompat="@drawable/main_icon_live"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_37373d"
                        android:textSize="11sp"
                        android:text="LIVE"
                        android:layout_marginLeft="@dimen/dp_4"
                      />
                </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/horizontal_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="12dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/txtWayHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
               app:srcCompat="@drawable/main_icon"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtHomeName"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/c_37373d"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="上海申花"
               />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtHomeScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_37373d"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="0"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="12dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivGuestIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGuestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:textColor="@color/c_37373d"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="上海申花上海申花上海申花上海申花上海申花" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtGuestScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_37373d"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="0"/>
    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>