<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/shape_r25_ffffff"

        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:orientation="vertical"

        android:paddingTop="@dimen/dp_30">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="@string/txt_del_fri"
            android:textColor="@color/ps_color_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@color/c_E8eaef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvcancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:text="@string/cancel"
                android:textColor="@color/c_94999f"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/c_E8eaef" />

            <TextView
                android:id="@+id/tvsure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"


                android:text="@string/ensure"


                android:textColor="@color/c_34a853"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>