<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:orientation="vertical">
        <include
            android:id="@+id/titleTop"
            layout="@layout/com_title" />
        <RelativeLayout
            android:id="@+id/rrPushClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="15dp"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_37373d"
                        android:textSize="@dimen/sp_15"
                        android:text="@string/push_txt_set"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/push_txt_suggest"
                        android:textColor="@color/c_94999f"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_5"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtPushIsOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/push_txt_open"
                        android:textColor="@color/c_94999f"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_5"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_6"
                        app:srcCompat="@drawable/wd_gengduo_icon"/>
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/c_f2f3f7"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rrPushIsShowConcern"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="12dp"
            android:layout_height="55dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:text="@string/push_txt_concern"
                android:layout_centerVertical="true"
                android:textColor="@color/c_37373d"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/c_f2f3f7"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sbPushConcern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:kswThumbMargin="-4dp"
                app:kswThumbRadius="26dp"
                android:checked="false"
                app:kswBackRadius="@dimen/dp_16"
                app:kswBackColor="@drawable/custom_be_color"
                app:kswThumbColor="@drawable/custom_thumb_color"
                app:kswThumbWidth="@dimen/dp_16"
                app:kswThumbHeight="@dimen/dp_16"
                app:kswThumbRangeRatio="2.3"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rrPushIsShowAnchor"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="12dp"
            android:layout_height="55dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:text="@string/push_txt_debut"
                android:layout_centerVertical="true"
                android:textColor="@color/c_37373d"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/c_f2f3f7"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sbPushAnchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:kswThumbMargin="-4dp"
                app:kswThumbRadius="26dp"
                android:checked="false"
                app:kswBackRadius="@dimen/dp_16"
                app:kswBackColor="@drawable/custom_be_color"
                app:kswThumbColor="@drawable/custom_thumb_color"
                app:kswThumbWidth="@dimen/dp_16"
                app:kswThumbHeight="@dimen/dp_16"
                app:kswThumbRangeRatio="2.3"
                />
        </RelativeLayout>
    </LinearLayout>

</layout>