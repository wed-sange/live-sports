<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rltTop"
    android:background="@color/base_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_h">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_4"
        android:onClick="finishTopClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/return_b"
        tools:ignore="UsingOnClickInXml" />
    <TextView
        android:id="@+id/tvCancel"
        android:visibility="visible"
        android:text="@string/search"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingEnd="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_centerVertical="true"
        android:background="@drawable/shape8_18152a"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivBack"
        app:layout_constraintRight_toLeftOf="@id/tvCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivsea"
            android:layout_width="@dimen/dp_20"
            android:src="@drawable/ic_search_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/dp_20"/>
        <EditText
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivsea"
            app:layout_constraintRight_toLeftOf="@id/ivdel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:background="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColorHint="@color/c_8a91a0"
            android:textColor="@color/c_8a91a0"
            android:textSize="@dimen/sp_12"
            tools:text="@string/title" />
        <ImageView
            android:id="@+id/ivdel"
            android:layout_width="@dimen/dp_20"
            android:src="@drawable/ic_close"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/dp_20"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tvOption"
        android:visibility="gone"
        tools:text="@string/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingEnd="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>