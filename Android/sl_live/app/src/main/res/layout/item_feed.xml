<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_20"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="2023-02-25"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/c_94999f"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvtime"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/shape_r8_ffffff"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="15dp"
        android:paddingTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_16"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivtype"
            android:layout_width="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ic_notify"
            android:layout_height="26dp"/>
        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/c_37373d"
            android:layout_marginLeft="@dimen/dp_8"
            app:layout_constraintTop_toTopOf="@id/ivtype"
            app:layout_constraintBottom_toBottomOf="@id/ivtype"
            app:layout_constraintLeft_toRightOf="@id/ivtype"
            android:text="@string/txt_feedtype"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/view0"
            android:layout_width="match_parent"
            android:background="@color/c_f2f3f7"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/ivtype"
            app:layout_constraintLeft_toLeftOf="@id/ivtype"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"


            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/view0"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="11111111111111111111111111111111111111111111111111111111111111111111111111"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/c_37373d"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/sp_15"
            android:visibility="gone"
            android:textColor="@color/c_37373d"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>